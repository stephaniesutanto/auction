<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Lister:</strong>
  <%= @product.user.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Starting Bid:</strong>
  <%= @product.starting_bid %>
</p>

<p>
  <strong>Highest Bid:</strong>
  <%= @product.bid.try(:amt) %>
</p>

<p>
  <strong>Bidder:</strong>
  <%= @product.bid.try(:user).try(:name) %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @product.deadline %>
</p>

  <%= form_for [@product, @bid] do |f| %>
  <p>
    <strong>New bid: </strong>
    <%= f.number_field :amt %>
    <%= f.submit %>
  </p>
  <% end %>

<%= link_to 'Back', products_path %>
